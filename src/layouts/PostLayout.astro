---
const { frontmatter } = Astro.props;
interface Props {
	title: string;
}

const { title } = Astro.props;
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import '../styles/base.css'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
	</head>
	<body class="bg-white ">
		<Navbar/>
		<main class="container prose prose-slate mt-16">
      <article>
				<img class="rounded-lg" src={frontmatter.image.url} alt={frontmatter.image.alt}>
        <slot />
      </article>
    </main>
		<Footer/>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>
</html>

